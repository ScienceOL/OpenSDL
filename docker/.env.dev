# OSDL Development Environment

# Database (use host.docker.internal to connect to infra running on host)
DATABASE_HOST=host.docker.internal
DATABASE_PORT=5432
DATABASE_NAME=osdl
DATABASE_USER=postgres
DATABASE_PASSWORD=osdl

# Redis
REDIS_HOST=host.docker.internal
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
PLATFORM=osdl
SERVICE=api
WEB_PORT=8080
SCHEDULE_PORT=8081
GRPC_PORT=9090
ENV=dev

# Auth Backend
OAUTH_SOURCE=casdoor

# OAuth2 (Casdoor) â€” internal: host.docker.internal:8000, external: localhost:8000
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_SCOPES=read,write,offline_access
OAUTH2_TOKEN_URL=http://host.docker.internal:8000/api/login/oauth/access_token
OAUTH2_AUTH_URL=http://localhost:8000/login/oauth/authorize
OAUTH2_REDIRECT_URL=http://localhost:8080/api/auth/callback/casdoor
OAUTH2_USERINFO_URL=http://host.docker.internal:8000/api/get-account
CASDOOR_ADDR=http://host.docker.internal:8000

# Log
LOG_PATH=./info.log
LOG_LEVEL=debug
