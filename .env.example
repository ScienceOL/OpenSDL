# Database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=osdl
DATABASE_USER=postgres
DATABASE_PASSWORD=osdl

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Server
PLATFORM=osdl
SERVICE=api
WEB_PORT=8080
SCHEDULE_PORT=8081
ENV=dev
GRPC_PORT=9090

# OAuth2 (Casdoor)
OAUTH2_CLIENT_ID=your-client-id
OAUTH2_CLIENT_SECRET=your-client-secret
OAUTH2_SCOPES=read,write,offline_access
OAUTH2_TOKEN_URL=http://localhost:8000/api/login/oauth/access_token
OAUTH2_AUTH_URL=http://localhost:8000/login/oauth/authorize
OAUTH2_REDIRECT_URL=http://localhost:8080/api/auth/callback/casdoor
OAUTH2_USERINFO_URL=http://localhost:8000/api/get-account
CASDOOR_ADDR=http://localhost:8000

# Log
LOG_PATH=./info.log
LOG_LEVEL=info

# Trace (OpenTelemetry)
TRACE_VERSION=0.0.1
TRACE_TRACEENDPOINT=
TRACE_METRICENDPOINT=

# Auth Backend (casdoor or bohr)
OAUTH_SOURCE=casdoor

# Bohrium RPC (only needed when OAUTH_SOURCE=bohr)
BOHR_CORE_ADDR=http://127.0.0.1
ACCOUNT_ADDR=http://127.0.0.1
BOHR_ADDR=http://127.0.0.1

# Sandbox
SANDBOX_ADDR=http://127.0.0.1:8082
SANDBOX_APIKEY=osdl-sandbox
